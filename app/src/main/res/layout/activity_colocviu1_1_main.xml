<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Navigate to Secondary Activity Button -->
    <Button
        android:id="@+id/navigate_button"
        android:layout_width="294dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:text="Navigate to Secondary Activity" />

    <!-- Uneditable Text Field to display count for Button 1 -->

    <!-- Uneditable Text Field to display count for Button 2 -->

    <!-- Horizontal layout for button counters and buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="24dp">

        <!-- Left side (Press Me!) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Counter TextView for Button 1 -->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <!-- Press Me! Button -->
            <Button
                android:id="@+id/button1"
                android:layout_width="143dp"
                android:layout_height="99dp"
                android:text="Press Me!" />
        </LinearLayout>

        <!-- Right side (Press Me, Too!) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Counter TextView for Button 2 -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <!-- Press Me, Too! Button -->
            <Button
                android:id="@+id/button2"
                android:layout_width="155dp"
                android:layout_height="95dp"
                android:text="Press Me, Too!" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
